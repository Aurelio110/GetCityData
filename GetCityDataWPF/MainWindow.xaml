<mah:MetroWindow x:Class="GetCityDataWPF.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 Title="Get City Data"
                 Width="800"
                 Height="450"
                 Icon="/Icons/Skyscraper.ico"
                 WindowStartupLocation="CenterScreen"
                 mc:Ignorable="d"
                 >
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFBBBBBB" Offset="0.487"/>
                <GradientStop Color="White" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="ClearIt" Content="Clear" HorizontalAlignment="Left" Margin="44,350,0,0" VerticalAlignment="Top" Height="52" Width="201" Click="Button_Click_Clear" TabIndex="3"/>
        <Button Content="Search" HorizontalAlignment="Left" Margin="540,350,0,0" VerticalAlignment="Top" Height="52" Width="201" Click="Button_Click_Search" TabIndex="2"/>
        <Label Content="Nach welchem Ort möchten Sie suchen?" HorizontalAlignment="Left" Margin="10,54,0,0" VerticalAlignment="Top" Height="38" Width="377" FontSize="18"/>
        <TextBox x:Name="cityName" HorizontalAlignment="Center" Margin="0,127,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="780" TextChanged="TextBox_TextChanged" Height="196" FontSize="16" TabIndex="1" BorderThickness="1" Background="White"/>
        <!--  Your content  -->
    </Grid>
</mah:MetroWindow>